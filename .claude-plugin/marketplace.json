  "configuration": {
    "properties": {
      "jira": {
        "type": "object",
        "description": "JIRA integration configuration",
        "properties": {
          "url": {
            "type": "string",
            "description": "JIRA instance URL (e.g., https://company.atlassian.net)"
          },
          "email": {
            "type": "string",
            "description": "JIRA account email"
          },
          "projectKey": {
            "type": "string",
            "description": "JIRA project key (e.g., PROJ)"
          }
        }
      },
      "figma": {
        "type": "object",
        "description": "Figma integration configuration",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable Figma design integration"
          }
        }
      },
      "slack": {
        "type": "object",
        "description": "Slack integration configuration",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable Slack notifications"
          },
          "channelId": {
            "type": "string",
            "description": "Slack channel ID for notifications"
          }
        }
      },
      "confluence": {
        "type": "object",
        "description": "Confluence integration configuration",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable Confluence documentation publishing"
          },
          "spaceKey": {
            "type": "string",
            "description": "Confluence space key"
          }
        }
      },
      "workflow": {
        "type": "object",
        "description": "Workflow configuration",
        "properties": {
          "testCoverageTarget": {
            "type": "number",
            "default": 80,
            "description": "Target test coverage percentage (default: 80%)"
          },
          "autoApprove": {
            "type": "boolean",
            "default": false,
            "description": "Auto-approve phases (not recommended)"
          }
        }
      }
    }
  },

