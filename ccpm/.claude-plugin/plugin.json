      "rules/code-quality.md"
    ],
    "project": [
      ".claude/project-contexts/[project]/rules.md"
    ]
  },
  "integrations": {
    "jira": {
      "enabled": true,
      "script": "scripts/jira-fetch.sh",
      "env_vars": ["JIRA_URL", "JIRA_EMAIL", "JIRA_API_TOKEN"]
    },
    "figma": {
      "enabled": true,
      "script": "scripts/figma-fetch.sh",
      "env_vars": ["FIGMA_ACCESS_TOKEN"]
    },
    "slack": {
      "enabled": true,
      "script": "scripts/slack-notify.sh",
      "env_vars": ["SLACK_BOT_TOKEN", "SLACK_CHANNEL_ID"]
    },
    "confluence": {
      "enabled": true,
      "script": "scripts/confluence-publish.sh",
      "env_vars": ["CONFLUENCE_URL", "CONFLUENCE_EMAIL", "CONFLUENCE_API_TOKEN"]
    }
  },
