  "workflows": {
    "9-phase": {
      "description": "Complete 9-phase TDD workflow",
      "phases": [
        "Understand",
        "Design",
        "UI Breakdown",
        "Plan Tests",
        "Write Tests (RED)",
        "Build (GREEN)",
        "Polish (REFACTOR)",
        "Review",
        "Verify",
        "Document",
        "Share"
      ]
    },
    "quick-fix": {
      "description": "Lightweight bug fix workflow",
      "phases": [
        "Understand Issue",
        "Write Failing Test",
        "Implement Fix",
        "Verify"
      ]
    }
  },
