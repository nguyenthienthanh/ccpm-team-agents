# Aura Frog Configuration File
# Auto-generated by project:init command
# Version: 5.2.0

version: "5.2.0"
project_context: "[PROJECT_NAME]"  # Reference to project-contexts/[PROJECT_NAME]/

# Workflow Settings
workflow:
  # Default workflow mode: auto, full, lightweight
  # auto: Claude chooses based on task complexity
  # full: Always use 9-phase workflow
  # lightweight: Always use quick commands
  default_mode: "auto"
  
  # Test coverage target percentage
  test_coverage_target: 80
  
  # TDD enforcement level: strict, moderate, lenient
  tdd_enforcement: "strict"
  
  # Require approval gates after each phase
  approval_gates: true
  
# Agent Configuration
agents:
  # Auto-activate relevant agents based on task
  auto_activate: true
  
  # Primary agent for this project (detected from tech stack)
  # Examples: mobile-react-native, web-vuejs, backend-laravel
  primary: "[PRIMARY_AGENT]"
  
# Integration Settings
integrations:
  # JIRA integration
  jira:
    enabled: false
    # Ticket format: CUTEPH-1234, CUTEMY-5678, etc.
    ticket_format: "[TICKET_FORMAT]"
  
  # Confluence integration
  confluence:
    enabled: false
  
  # Slack integration
  slack:
    enabled: false
  
  # Figma integration
  figma:
    enabled: false

# Project-Specific Settings
project:
  # Project name (from detected project)
  name: "[PROJECT_NAME]"
  
  # Project type: mobile, web, backend, fullstack
  type: "[PROJECT_TYPE]"
  
  # Main branch name
  main_branch: "develop"  # or "main", "master", etc.

# Git Configuration
git:
  # Branch naming convention
  branch_prefix: "feature"  # feature, bugfix, hotfix
  
  # Require JIRA ticket in branch name
  require_ticket: true
  
  # Commit message format
  commit_format: "conventional"  # conventional, simple

# Code Quality Settings
quality:
  # Linter to use
  linter: "eslint"  # eslint, prettier, phpcs, etc.
  
  # Formatter to use
  formatter: "prettier"  # prettier, php-cs-fixer, etc.
  
  # Type checking
  type_check: true  # TypeScript, PHP type hints, etc.
  
  # Code review requirements
  require_review: true
  
  # Minimum reviewers required
  min_reviewers: 1

